{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run and watch web api",
            "command": "dotnet watch --project api-under-test/vote/vote.csproj run",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run k6test",
            "command": "k6 run k6-tests/challenge${input:testToRun}test.js",
            "type": "shell",
            "group": "test",
        },
        {
            "label": "ping api",
            "command": "wget http://localhost:5135",
            "type": "shell",
            "group": "test",
        },
        {
            "label": "print last return code",
            "command": "echo $?",
            "type": "shell",
            "group": "test",
        },
        {
            "label": "run npm ci",
            "command": "npm ci",
            "type": "shell",
            "group": "test",
            "options": {
                "cwd": "${cwd}/k6-tests"
            },
        }
    ],
      "inputs": [
        {
        "type": "pickString",
        "id": "testToRun",
        "description": "Which test do you want to run?",
        "options": [
            "1",
            "2",
            "3",
            "4",
            "5",
            "6",
            "7",
        ],
        "default": "1"
        }
    ]
}